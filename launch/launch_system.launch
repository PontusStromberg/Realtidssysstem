<?xml version="1.0"?>
<launch>
  
  <!--Set this to an appropriate channel, e.g. //0//110//2M and verify or change with cfclient-->
  <arg name="uri" default="radio://0/110/2M" />
  <arg name="roll_trim" default="0.001" />
  <arg name="pitch_trim" default="0.01" />
    
  <include file="$(find crazyflie_driver)/launch/crazyflie_server.launch">
    </include>

    <group ns="crazyflie">
      <node pkg="crazyflie_driver" type="crazyflie_add" name="crazyflie_add" output="screen">
        <param name="uri" value="$(arg uri)" />
        <param name="tf_prefix" value="crazyflie" />
          <rosparam>
            genericLogTopics: ["log_ref", "log_pos"]
            genericLogTopicFrequencies: [10, 10]
            genericLogTopic_log_ref_Variables: ["reference.x", "reference.y", "reference.z"]
            genericLogTopic_log_pos_Variables: ["measured.x", "measured.y", "measured.z"]
          </rosparam>
      </node>
  </group>

  <node name="master" pkg="rts_project" type="master.py" output="screen" />
</launch>
